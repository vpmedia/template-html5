{
  "root": true,
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "import"
  ],
  "globals": {
    "__DEV__": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "prefer-destructuring": "warn",
    "object-curly-newline": "warn",
    "padded-blocks": "warn",
    "newline-per-chained-call": "warn",
    "no-console": "warn",
    "complexity": ["warn", { "max": 10 }],
    "require-jsdoc": ["warn", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true,
        "ArrowFunctionExpression": false
      }
    }],
    "valid-jsdoc": ["warn", {
      "requireReturn": false,
      "prefer": {
        "return": "return"
      }
    }]
  }
}