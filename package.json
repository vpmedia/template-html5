{
  "name": "template_html5",
  "version": "1.0.0",
  "description": "HTML5 starter project",
  "homepage": "https://github.com/vpmedia/template-html5",
  "repository": {
    "type": "git",
    "url": "https://github.com/vpmedia/template-html5.git"
  },
  "main": "src/index.js",
  "author": "Andras Csizmadia <andras@vpmedia.hu>",
  "license": "MIT",
  "scripts": {
    "run-node": "babel-node src/main/server/index.js",
    "watch": "watch 'yarn run main' src --interval=1",
    "main": "yarn run lint && yarn run flow && yarn run test && yarn webpack",
    "lint:js": "eslint src/**/*.js",
    "lint:css": "stylelint \"src/**/*.{css,less,scss,sss}\"",
    "lint": "yarn run lint:js && yarn run lint:css",
    "flow": "flow",
    "test": "mocha \"src/test/**/*test.js\" --require babel-register --require src/test/setup.js",
    "webpack": "webpack -d",
    "webpack-dev": "webpack -d --watch",
    "webpack-release": "webpack -p"
  },
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "immutable": "^3.8.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-actions": "^1.1.0",
    "redux-immutable": "^3.0.8"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-preset-flow": "^1.0.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "browser-sync": "^2.18.5",
    "browser-sync-webpack-plugin": "^1.1.3",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "chai-immutable": "^1.6.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "extend": "^3.0.0",
    "flow-bin": "^0.36.0",
    "mocha": "^3.2.0",
    "react-addons-test-utils": "^15.4.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "webpack": "^2.1.0-beta.28",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-load-plugins": "^0.1.2"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  }
}
